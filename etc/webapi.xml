<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/carts/mine/set-payment-information-and-get-totals" method="POST">
        <service class="Aramex\Shipping\Api\AramexPaymentInterface" method="getTotals"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>
    <route url="/V1/guest-carts/:cartId/set-payment-information-and-get-totals" method="POST">
        <service class="Aramex\Shipping\Api\AramexGuestPaymentInterface" method="getTotals"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
</routes>
